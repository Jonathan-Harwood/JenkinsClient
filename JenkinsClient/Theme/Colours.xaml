<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Orange -->
    <Color x:Key="Orange_Primary" R="244" G="138" B="0" A="230" />
    <Color x:Key="Orange_Deep" R="244" G="138" B="0" A="255" />
    <Color x:Key="Orange_Faint" R="244" G="138" B="0" A="155" />
    <Color x:Key="Orange_Text" R="255" G="255" B="255" A="255" />
    
    <!-- Blue -->
    <Color x:Key="Blue_Primary" R="52" G="93" B="207" A="230" />
    <Color x:Key="Blue_Deep" R="52" G="93" B="207" A="255" />
    <Color x:Key="Blue_Faint" R="52" G="93" B="207" A="155" />
    <Color x:Key="Blue_Text" R="255" G="255" B="255" A="255" />
    
    <!-- Purple -->
    <Color x:Key="Purple_Primary" R="114" G="52" B="177" A="230" />
    <Color x:Key="Purple_Deep" R="114" G="52" B="177" A="255" />
    <Color x:Key="Purple_Faint" R="114" G="52" B="177" A="155" />
    <Color x:Key="Purple_Text" R="255" G="255" B="255" A="255" />
    
    <!-- Main Theme -->
    <SolidColorBrush x:Key="Theme_Primary" />
    <SolidColorBrush x:Key="Theme_Deep" />
    <SolidColorBrush x:Key="Theme_Faint" />
    <SolidColorBrush x:Key="Theme_Text" />

    <Color x:Key="DisabledText_Colour" R="176" G="176" B="176" A="255" />
    <SolidColorBrush x:Key="DisabledText" Color="{StaticResource DisabledText_Colour}" />
</ResourceDictionary>